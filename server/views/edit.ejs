<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="ml-4 mt-5 w-full h-screen bg-zinc-700 text-white">
    <div class="flex justify-end mr-8">
      <a
        class="bg-red-500 px-3 py-1.5 rounded-md inline-block text-sm"
        href="/logout"
        >Logout</a
      >
    </div>
    <h5 class="mb-5">edit your post.</h5>
    <form action="/update/<%=post._id %>" method="post">
      <textarea
        class="resize-none w-1/3 bg-transparent border-2 border-zinc-800 outline-none rounded-md p-3 block"
        name="content"
        placeholder="what's on your mind ?"
      > <%= post.content %></textarea>
      <input
        class="w-40 cursor-pointer px-3 py-2 bg-yellow-600 rounded-md font-weight-md block mt-2"
        type="submit"
        value="Update post"
      />
    </form>

  
  </body>
</html>
