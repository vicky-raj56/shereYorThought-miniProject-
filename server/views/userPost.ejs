<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Posts</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body class="ml-4 mt-5 w-full h-screen bg-zinc-700 text-white">
    <div>
      <!-- Logout Button -->
      <div class="flex justify-end mr-8">
        <a
          class="bg-red-500 px-3 py-1.5 rounded-md inline-block text-sm"
          href="/logout"
          >Logout</a
        >
      </div>

      <!-- All Users' Posts -->
      <div class="Posts mt-20">
        <h3 class="text-zinc-400 mb-4">All Users' Posts</h3>

        <div class="postContainer flex flex-wrap gap-6">
          <% data.forEach(function(user) { %> <%
          user.posts.forEach(function(post) { %>
          <div
            class="post w-1/3 p-4 border border-zinc-600 bg-zinc-700 rounded-md"
          >
            <!-- Profile Picture -->
            <div class="w-16 h-16 rounded-md overflow-hidden mb-2">
              <img
                class="w-full h-full object-cover"
                src="/uploads/<%= user.profilepic || 'default.webp' %>"
                alt="profile"
              />
            </div>

            <!-- Username -->
            <h1 class="text-blue-500 mb-2">@<%= user.username %></h1>

            <!-- Post Content -->
            <p class="text-sm tracking-tight"><%= post.content %></p>

            <!-- Likes -->
            <small class="mt-2 block"
              ><%= post.likes?.length || 0 %> Likes</small
            >

            <!-- Like/Unlike Button -->
            <div class="btns flex mt-4 gap-2">
              <a class="text-blue-500" href="/likes/<%= post._id %>">
                <%= post.likes.includes(currentUserId) ? "Unlike" : "Like" %>
              </a>
            </div>
          </div>
          <% }) %> <% }) %>
        </div>
      </div>
    </div>
  </body>
</html>
